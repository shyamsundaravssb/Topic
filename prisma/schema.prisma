generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String   // Will store the hashed password
  age       Int?     // The '?' makes it optional
  verified  Boolean  @default(false) // Default to unverified on signup
  createdAt DateTime @default(now())
}
